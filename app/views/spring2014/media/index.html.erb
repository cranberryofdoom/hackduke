<div class="frame-light">
	<div class="container content">
		<h1>Media Coverage</h1>
		<div class="row">
			<div class="text-center">
				<h2 class="banner-header">Articles</h2>
			</div>
			<% @articles.each do |a| %>
			<% if a.semester.season == "Spring" && a.semester.year.year == 2014 %>
			<div class="col-lg-6 text-center">
				<h3><a href="<%= a.link_url %>" title=""><%= a.title %></a></h3>
			</div>
			<% end %>
			<% end %>
		</div>
		<div class="row">
			<div class="text-center">
				<h2 class="text-center banner-header">Galleries</h2>
			</div>
			<% @galleries.each do |g| %>
			<% if g.semester.season == "Spring" && g.semester.year.year == 2014 %>
			<div class="col-md-4 text-center gallery">
				<%= g.iframe_html.html_safe %>
			</div>
			<% end %>
			<% end %>
		</div>
		<div class="row">
			<div class="text-center">
				<h2 class="banner-header">Videos</h2>
			</div>
			<% @videos.each do |v| %>
			<% if v.semester.season == "Spring" && v.semester.year.year == 2014 %>
			<div class="col-xs-12 text-center">
				<%= v.iframe_html.html_safe %>
			</div>
			<% end %>
			<% end %>
		</div>
	</div>
</div>